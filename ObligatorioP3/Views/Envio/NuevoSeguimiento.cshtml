@model ObligatorioP3.Models.NuevoSeguimientoViewModel

@{
    ViewData["Title"] = "Nuevo Seguimiento";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-7 col-lg-6">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h3 class="mb-0"><i class="bi bi-plus-circle"></i> Nuevo Seguimiento</h3>
                </div>
                <div class="card-body">
                    <form asp-action="NuevoSeguimiento">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                        <input type="hidden" asp-for="Envio.Id" value="@Model.Envio.Id" />

                        <div class="mb-3">
                            <label asp-for="Seguimiento.Comentario" class="form-label"></label>
                            <textarea asp-for="Seguimiento.Comentario" class="form-control" rows="4" placeholder="Ingrese un comentario..."></textarea>
                            <span asp-validation-for="Seguimiento.Comentario" class="text-danger"></span>
                        </div>

                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" asp-controller="Envio" class="btn btn-outline-secondary">
                                <i class="bi bi-arrow-left"></i> Volver a la lista
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-check-circle"></i> Crear
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
